{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Server",
            "group": "build",
            "type": "shell",
            "command": "file=$(cargo build --package=wgsl_analyzer --message-format=json | jq '. | select(.target.kind == [\"bin\"]) | .executable' -r); rm -f ./editors/code/out/wgsl_analyzer; cp \"$file\" ./editors/code/out",
            "problemMatcher": "$rustc"
        },
        {
            "label": "Build Server (Release)",
            "group": "build",
            "type": "shell",
            "command": "mv $(cargo build --package=wgsl_analyzer --message-format=json --release | jq '. | select(.target.kind == [\"bin\"]) | .executable' -r) ./editors/code/out",
            "problemMatcher": "$rustc"
        },
        {
            "label": "Build Extension",
            "group": "build",
            "type": "npm",
            "script": "build",
            "path": "editors/code/",
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/editors/code/"
                ]
            },
        },
        {
            "label": "Build Server and Extension",
            "group": "build",
            "dependsOn": [
                "Build Server",
                "Build Extension"
            ],
        },
        {
            "label": "Build Server (Release) and Extension",
            "group": "build",
            "dependsOn": [
                "Build Server (Release)",
                "Build Extension"
            ],
        },
    ]
}